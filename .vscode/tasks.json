{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ¦€ Build All",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--workspace"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "ğŸ§ª Test All",
      "type": "shell",
      "command": "cargo",
      "args": [
        "test",
        "--workspace",
        "--",
        "--nocapture"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "ğŸ” Clippy Check",
      "type": "shell",
      "command": "cargo",
      "args": [
        "clippy",
        "--workspace",
        "--",
        "-D",
        "warnings"
      ],
      "group": "build",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "ğŸš€ Sprint Demo",
      "type": "shell",
      "command": "cargo",
      "args": [
        "run"
      ],
      "group": "build",
      "dependsOn": [
        "ğŸ§ª Test All"
      ],
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "ğŸ”§ Format Code",
      "type": "shell",
      "command": "cargo",
      "args": [
        "fmt",
        "--all"
      ],
      "group": "build"
    }
  ]
}